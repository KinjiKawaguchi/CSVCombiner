<Window x:Class="CSVCombiner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSVCombiner"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="450">
    <Grid>
        <Frame x:Name="Top" HorizontalAlignment="Center" Height="50" VerticalAlignment="Top" Width="450" Background="#FFAB00FF"/>
        <Label x:Name="Title" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="320" FontSize="40" FontFamily="Arial Black" RenderTransformOrigin="0.5,0.5" Content="CSVComviner" Margin="50,0,0,0">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.269"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-0.329"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Image x:Name="Icon" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="50">
            <Image.OpacityMask>
                <ImageBrush ImageSource="/icon.png" Stretch="None" TileMode="FlipY"/>
            </Image.OpacityMask>
        </Image>
        <Frame x:Name="Frame_DropFile1" Content="" HorizontalAlignment="Center" Height="250" Margin="0,55,0,0" VerticalAlignment="Top" Width="430" BorderBrush="Red" Foreground="Red" Background="Red"/>
        <Frame x:Name="Frame_DropFile2" Content="" HorizontalAlignment="Center" Height="250" Margin="0,355,0,0" VerticalAlignment="Top" Width="430" BorderBrush="#FF004AFF" Background="#FF0098FF"/>
        <Button x:Name="Button_Execute" Content="Button" HorizontalAlignment="Center" Height="64" Margin="0,686,0,0" VerticalAlignment="Top" Width="430" Visibility="Hidden" Cursor="Hand"/>
        <DatePicker x:Name="DatePicker_DropFile1" HorizontalAlignment="Center" Margin="0,55,0,0" VerticalAlignment="Top" Height="250" Width="430" AllowDrop="True"/>
        <DatePicker x:Name="DatePicker_DropFile2" HorizontalAlignment="Center" Margin="0,355,0,0" VerticalAlignment="Top" Height="250" Width="430" AllowDrop="True"/>
    </Grid>
</Window>
